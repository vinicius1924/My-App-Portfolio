<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.vinicius.myappporftolio">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".popularmovies.PopularMoviesActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity">
            </meta-data>
        </activity>
        <activity
            android:name=".popularmovies.MovieActivity"
            android:parentActivityName=".popularmovies.PopularMoviesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".popularmovies.PopularMoviesActivity">
            </meta-data>
        </activity>

        <provider
            android:name=".popularmovies.database.MovieProvider"
            android:authorities="com.example.vinicius.myappportfolio"/>

        <activity android:name=".popularmovies.FavoritesActivity">
        </activity>
    </application>

</manifest>